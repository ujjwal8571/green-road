<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:adjustViewBounds="true"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        android:minHeight="250dp"
        android:minWidth="250dp"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gmarker2"
        android:id="@+id/micon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Covered But Risky"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/type"
        android:layout_below="@+id/micon"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:background="@color/colorPrimaryDark"
        android:autoText="false"
        android:textColor="@color/cast_expanded_controller_text_color" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/smarker"
        android:layout_marginBottom="20dp"
        android:id="@+id/smarker"
        android:layout_alignBottom="@+id/type"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bump or Pothole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/smarker"
        android:layout_marginStart="35dp"
        android:id="@+id/name"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:layout_alignTop="@+id/smarker"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:text="Fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/likeButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/fakeButton"
        android:background="#6669e0b1"
        android:layout_alignTop="@+id/likeButton" />


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/like"
        android:id="@+id/like"
        android:layout_alignTop="@+id/fake"
        android:layout_toEndOf="@+id/smarker" />


    <Button
        android:text="Like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/likeButton"
        android:background="#6669e0b1"
        android:layout_below="@+id/like"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/fake"
        android:id="@+id/fake"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/type"
        android:layout_toEndOf="@+id/name" />

</RelativeLayout>
