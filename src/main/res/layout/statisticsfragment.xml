<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relativelayout"
    android:background="@drawable/colorbg1">

    <TextView
        android:text="                 CONTRIBUTOR OF THE MONTH"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/text1"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ea215a" />

    <TextView
        android:text="Contributor not found at this moment!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/text2"
        android:layout_alignBottom="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="             In this week"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/text3"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="                                      REGISTERED"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/text3"
        android:layout_alignStart="@+id/text1"
        android:layout_marginTop="32dp"
        android:id="@+id/text5"
        android:background="@android:color/white"
        android:layout_alignEnd="@+id/text1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Pot Holes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text5"
        android:layout_alignStart="@+id/text5"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:id="@+id/total_potholes"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Bumps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/total_potholes"
        android:layout_centerHorizontal="true"
        android:id="@+id/total_bumps"
        android:textColor="@android:color/black" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_p"
        android:layout_below="@+id/total_potholes"
        android:layout_toEndOf="@+id/solved1" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_b"
        android:layout_below="@+id/total_bumps"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="                A road safety initiative for green roads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:background="#9ffcec"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:marqueeRepeatLimit="marquee_forever" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/winner"
        android:id="@+id/winner"
        android:layout_above="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="          In this month"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/text4"
        android:layout_marginRight="10dp"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/text5"
        android:layout_toEndOf="@+id/total_bumps" />

    <TextView
        android:text="PotHole : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text3"
        android:layout_toStartOf="@+id/text2"
        android:layout_marginTop="28dp"
        android:id="@+id/pothole1" />

    <TextView
        android:text="PotHole : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pothole1"
        android:layout_alignEnd="@+id/text2"
        android:layout_marginEnd="18dp"
        android:id="@+id/pothole2" />

    <TextView
        android:text="Bump : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/pothole1"
        android:id="@+id/bump1" />

    <TextView
        android:text="Bump : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bump1"
        android:layout_alignStart="@+id/pothole2"
        android:id="@+id/bump2" />

    <TextView
        android:text="Solved : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bump1"
        android:layout_alignStart="@+id/bump1"
        android:layout_marginTop="23dp"
        android:id="@+id/solved1" />

    <TextView
        android:text="Solved : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/solved1"
        android:layout_alignStart="@+id/bump2"
        android:id="@+id/solved2" />

    <TextView
        android:text="Solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/total_bumps"
        android:layout_toEndOf="@+id/bump2"
        android:id="@+id/total_solved"
        android:textColor="@android:color/black" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_s"
        android:layout_below="@+id/total_solved"
        android:layout_alignEnd="@+id/text2"
        android:layout_marginEnd="7dp" />


</RelativeLayout>